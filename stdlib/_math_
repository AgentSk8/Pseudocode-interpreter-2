PI <- 3.141592653589793
DEF sqrt(a) DO
	RETURN a ^ 0.5
ENDEF
DEF factorial(a) DO
	b <- 1
	FOR i <- 1 TO a+1
		b <- b * i
	NEXT i + 1
	RETURN b
ENDEF
DEF sin(a) DO
	op <- -1
	r <- a
	FOR i <- 3 TO 19
		r <- r + ((a^i)/factorial(i))*op
		op <- op * -1
	NEXT i +2
	RETURN r
ENDEF
DEF cos(a) DO
	op <- -1
	r <- 1
	FOR i <- 2 TO 18
		r <- r + ((a^i)/factorial(i))*op
		op <- op * -1
	NEXT i +2
	RETURN r
ENDEF
DEF tan(a) DO
	RETURN sin(a)/cos(a)
ENDEF
DEF deg(a) DO
	RETURN a * 180 / PI
ENDEF
DEF rad(a) DO
	RETURN a * PI/180
ENDEF